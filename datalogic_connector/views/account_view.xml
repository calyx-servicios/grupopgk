<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_form_report_concepts" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_invoice_sent']" position='after'>
                <button name="action_ur_invoice_sent" 
                        type="object" 
                        string="Send &amp; Print" 
                        attrs="{'invisible':['|', '|', '|', ('state', '!=', 'posted'), ('move_type', 'not in', ('out_invoice', 'out_refund'))]}" 
                        class="oe_highlight" />

                <button name="action_ur_invoice_sent" 
                        type="object" 
                        string="Send &amp; Print" 
                        attrs="{'invisible':['|', '|', '|', ('state', '!=', 'posted'), ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund'))]}" />

            </xpath>
            <xpath expr="//button[@name='action_post']" position='after'>
                <button name="send_dgi" string="Post DGI" class="oe_highlight" type="object" attrs="{'invisible': ['|','|',('move_type', 'not in', ('out_invoice', 'out_refund')),('descargar','!=',False)]}"/>
            </xpath>
            <xpath expr="//button[@name='action_invoice_sent'][1]" position='attributes'>
                <attribute name="attrs">{'invisible':['|', '|','|',  ('state', '!=', 'posted'), ('move_type', 'not in', ('out_invoice', 'out_refund'))]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_invoice_sent'][2]" position='attributes'>
                <attribute name="attrs">{'invisible':['|', '|','|',  ('state', '!=', 'posted'), ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund'))]}</attribute>
            </xpath>
            <xpath expr="//page[@id='other_tab']" position='after'>
                <page id="dgi_info" string="DGI" name="DGI" attrs="{'invisible': ['|',('move_type', 'not in', ('out_invoice', 'out_refund'))]}">
                <group>
                    <group>
                        <field name="error_dgi" attrs="{'invisible':[('error_dgi','=','1')]}"/>
                        <field name="tpo_cfe" class="oe_inline"/>
                        <field name="serie_cfe" />
                        <field name="nrocae" string="CAE" attrs="{'invisible':[('error_dgi','!=','1')]}"/>
                        <field name="hashcfe" string="Hashcode"/>
                        <field name="txt_send" string="XML enviado" invisible="1"/>
                    </group>
                    <group>
                        <field name="FchVenc" string="Fecha de vencimiento de la AutorizaciÃ³n" attrs="{'invisible':[('error_dgi','!=','1')]}"/>
                        <field name="description_dgi" attrs="{'invisible':[('error_dgi','=','1')]}"/>
                        <field name="comprobantecfe" string="Comprobante"/>
                        <field name="estado" invisible="1"/>
                        <field name="show_estado" string="Resultado" attrs="{'invisible':[('error_dgi','!=','1')]}"/>
                        <field name="descargar" string="Descargar Factura"/>
                        <field name="txt_rquest" string="XML resibido" invisible="1"/>
                    </group>
                </group>
                <button name="update_invoice_status" string="Actualizar" class="oe_highlight" type="object" attrs="{'invisible': ['|','|',('move_type', 'not in', ('out_invoice', 'out_refund')),('state','!=','posted')]}"/>            
                </page>
            </xpath>
        </field>
    </record>
</odoo>