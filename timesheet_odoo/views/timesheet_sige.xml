<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="view_timessheet_odoo_form" model="ir.ui.view">
        <field name="model">timesheet.sige</field>
        <field name="arch" type="xml">
            <form>
            <group col="4">
                <field name="employee"/>
                <field name="holidays"/>
                <field name="start_of_period"/>
                <field name="working_day" widget='float_time'/>
                <field name="end_of_period"/>
                <field name="days_to_register"/>
                <field name="required_hours"/>
                <field name="pending_hours"/>
                <field name="chargeability"/>
                <field name="company"/>
                <field name="timesheet"/>
            </group>
            </form>
        </field>
    </record>

    <record id="view_timessheet_odoo" model="ir.ui.view">
        <field name="model">timesheet.sige</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee"/>
                <field name="start_of_period"/>
                <field name="end_of_period"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="timessheet_odoo_action_window">
        <field name="name">Timesheet Odoo</field>
        <field name="res_model">timesheet.sige</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="Timesheet Sige" id="timesheet_sige"/>
    <menuitem
            name="Timesheet Sige"
            id="timesheet_sige_odoo"
            parent="hr_timesheet.menu_hr_time_tracking"
            action="timessheet_odoo_action_window"
            sequence="10"
    />
</odoo>
