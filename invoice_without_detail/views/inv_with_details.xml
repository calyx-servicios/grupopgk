<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after" >
                <field name="voucher_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>
    <template id="report_invoice_document_with_payments" inherit_id="l10n_ar.report_invoice_document_with_payments">
         <t t-if="o.invoice_origin" position="after">
            <t t-if="o.voucher_ids">
                <br/>
                <strong>Remitos:</strong>
                <t t-foreach="o.voucher_ids" t-as="voucher">
                    <span t-field="voucher.display_name"/>
                </t>
            </t>
        </t>
    </template>
</odoo>
